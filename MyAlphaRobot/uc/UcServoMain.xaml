<UserControl x:Class="MyAlphaRobot.UcServoMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyAlphaRobot"
             mc:Ignorable="d" 
             d:DesignHeight="38" d:DesignWidth="38">
    <Grid>
        <Ellipse x:Name="circleUI"
         Fill="YellowGreen" Stroke="Black" StrokeThickness="3" Margin="0,0,0,0"
                 MouseDown="Servo_MouseDown"
                 />
        <Label x:Name="lblId" Content="00" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False" />
    </Grid>
</UserControl>
